<div class="col-lg-8 mx-lg-auto mt-5 ">
  <div class="card shadow">
    <div class="card-header bg-warning ">
      <h2 class="card-title text-center ">Forgot password?</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "row") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="col">
          <%= f.label :email, class:'form-label'%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control " %>
        </div>

        <div class="col mt-4 ">
          <%= f.submit "Send me reset password instructions", class: "btn btn-dark" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>    
