<div class="col-lg-8 mx-lg-auto mt-5 ">
  <div class="card shadow">
    <div class="card-header bg-warning ">
      <h2 class="card-title text-center ">Log In</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'row') do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="col">
          <%= f.label :email, class:'form-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="col">
          <%= f.label :password,class:'form-label'  %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="col">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="col mt-4 ">
          <%= f.submit "Log in", class:"btn btn-dark" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>   
